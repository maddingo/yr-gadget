<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="yr.no weather" >
  </ModulePrefs>
  <UserPref
  	name="placeURI"
  	dislay_name="Place URI"
  	required="true"/>
  <Content type="html" view="default">
    <![CDATA[
    <div id="weather"></div>
<script type="text/javascript">

function doRender() {
	// setup variables
	var prefs = new _IG_Prefs();
	var placeURI = prefs.getString('placeURI');
	var script = document.createElement("script");
	script.type = "text/javascript";
	script.src = "http://www.yr.no"+placeURI+"/ekstern_boks_stripe.js";
	
	var weather = document.getElementById("weather");
	weather.appendChild(script);
}

gadgets.util.registerOnLoadHandler(doRender);
</script>
    ]]>
  </Content>
</Module>
